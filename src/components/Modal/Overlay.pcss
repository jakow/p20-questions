.base {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  transition: opacity 200ms ease-in-out;
  background-color: rgba(255,255,255,0.8);
  opacity: 0;
  z-index: 10000;
}

.afterOpen {
  opacity: 1;
}

.beforeClose {
  opacity: 0;
}